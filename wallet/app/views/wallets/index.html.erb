<p id="notice"><%= notice %></p>

<h1>レシート</h1>

<table>
  <thead>
    <tr>
      <th>品目</th>
      <th>金額</th>
      <th>支払い有無</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wallets.each do |wallet| %>
      <tr>
        <td><%= wallet.item %></td>
        <td><%= wallet.cost %></td>
        <td><%= wallet.paid ? '支払い済み' : '未支払い' %></td>
        <td><%= link_to 'Show', wallet %></td>
        <td><%= link_to 'Edit', edit_wallet_path(wallet) %></td>
        <td><%= link_to 'Destroy', wallet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'レシート作成', new_wallet_path %>
